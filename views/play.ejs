<!DOCTYPE html>
<html>

<%- include('ani_header.ejs') %>

<body class="bg-slate-800 font-anime text-white h-96">

    <div class="max-w-7xl mx-auto">
        <%- include('nav.ejs'); %>
        <p class="pl-4 bg-slate-700 rounded-t-md text-lg"> EP <%= ep %> | Internal Player
            <% if(ep == total) { %>
            <i class="fa-solid fa-forward float-right pr-2 opacity-50 pt-1"></i>
            <% } else { %>
            <% let next = ep%>
            <% next++ %>
            <a class="float-right pr-2" href="/play/<%= name %>/<%= next %>"><i class="fa-solid fa-forward"></i></a>
            <% } %>
            <a class="float-right pr-4" href="https://goload.pro/download?id=<%= video_id %>"><i
                    class="fa-solid fa-download"></i></a>
        </p>
        <iframe class="w-full aspect-video sm:h-1/5 lg:h-full bg-slate-500" height="619" width="1100"
            src="/api/<%= video_id %> "></iframe>
        <div class="pl-4 bg-slate-700 rounded-b-md mb-4">
            <p class="text-sm text-slate-300 pb-1 pt-3">GOGO Stream
                <div class="float-right pr-4 -mt-8">
                    <% if(ep === total) { %>
                        Only <%= ep %> Episode 
                    <% } else {%>         
                        Total of <%= total %> Episodes.
                    <% } %> 
                </div>
            </p>
            <p class="text-3xl pb-3">
                <%= title %>
            </p>
            <div class="overflow-scroll max-h-36 mb-4">
                <% for(var i = 1; i <= total; i++) {%>
                <% if(i == ep) {%>
                <button
                    class="bg-red-900 inline-block text-center w-12 h-8 text-white font-boldrounded opacity-50 cursor-not-allowed mb-1"><%= i %></button>
                <% } else {%>
                <a class="no-underline" href="/play/<%= name %>/<%= i %> "><button
                        class="bg-red-700 inline-block text-center w-12 h-8 text-white font-boldrounded opacity-100 mb-1"><%= i %></button></a>
                <% }%>
                <% }%>
            </div>
            <hr class="mr-4">
            <div class="pt-3 text-sm text-slate-300 pb-4">
                <p></p>
            </div>
        </div>
    </div>
    <script src="/js/nav.js"></script>
</body>